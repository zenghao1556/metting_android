<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20222A"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="460dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="@mipmap/login_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咪叮加加智能化会务SaaS系统"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="49dp"
            android:textSize="17sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pwd_login_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:text="账号登录"
                android:textColor="#BBBBBB"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_code_login_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="18dp"
                android:textSize="15sp"
                android:text="验证码登录"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:hint="请输入手机号"
                android:paddingLeft="12dp"
                android:text="15621308386"
                android:textSize="13sp"
                android:background="@drawable/shape_edit_bg"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:hint="请输密码"
                android:paddingLeft="12dp"
                android:layout_marginTop="14dp"
                android:textSize="13sp"
                android:inputType="textPassword"
                android:text="admin321"
                android:background="@drawable/shape_edit_bg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="197dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/shape_edit_bg_left"
                    android:hint="图形验证码"
                    android:paddingLeft="12dp"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="86dp"
                    android:layout_height="40dp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:hint="请输入手机号"
                android:paddingLeft="12dp"
                android:layout_marginTop="14dp"
                android:textSize="13sp"
                android:inputType="number"
                android:background="@drawable/shape_edit_bg"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_code_number"
                    android:layout_width="197dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_edit_bg_left"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_send_code_btn"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:background="@drawable/shape_edit_bg_right_gray"
                    android:text="发送验证码"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/rb_cache_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:theme="@style/MyCheckBox" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rb_cache_pwd"
                android:textColor="#8C8C8C"
                android:textSize="12sp"
                android:text="七天免登陆"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8C8C8C"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="忘记密码？"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@mipmap/login_btn_bg"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="登录"/>

    </LinearLayout>

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31.5dp"
        android:src="@mipmap/metting_logo"/>

</RelativeLayout>