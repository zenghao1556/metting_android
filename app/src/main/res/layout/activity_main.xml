<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#20222A">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咪叮加加智能化会务SaaS系统"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/mine"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/title">

        <LinearLayout
            android:id="@+id/ll_dzzp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="60dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tv_dzzp"
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:src="@mipmap/dzzp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="电子桌牌"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zwq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/ll_dzzp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <ImageView
            android:id="@+id/tv_zwq"
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:src="@mipmap/zwq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="座位区"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/ll_zwq"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/tv_zu"
            android:layout_width="119dp"
            android:layout_height="119dp"
            android:layout_toRightOf="@+id/ll_zwq"
            android:src="@mipmap/zu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="我的"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>